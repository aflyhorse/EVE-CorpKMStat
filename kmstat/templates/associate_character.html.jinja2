<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>关联角色</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid p-3">
        <form id="associateForm" method="POST" action="{{ url_for('associate_character', character_id=character.id) }}">
            <div class="mb-3">
                <label for="playerSelect" class="form-label">选择现有玩家</label>
                <select class="form-select" id="playerSelect" name="player_id">
                    <option value="">-- 选择现有玩家 --</option>
                    {% for player in players %}
                    <option value="{{ player.id }}">{{ player.title }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="mb-3">
                <label class="form-label">或者</label>
            </div>
            
            <div class="mb-3">
                <label for="newPlayerTitle" class="form-label">创建新玩家</label>
                <input type="text" class="form-control" id="newPlayerTitle" name="new_player_title" 
                       placeholder="输入新玩家头衔">
            </div>
            
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">关联角色</button>
                <button type="button" class="btn btn-secondary" onclick="cancelAssociation()">取消</button>
            </div>
        </form>
        
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ 'danger' if category == 'error' else 'success' }}" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('associateForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const playerSelect = document.getElementById('playerSelect').value;
            const newPlayerTitle = document.getElementById('newPlayerTitle').value;
            
            if (!playerSelect && !newPlayerTitle) {
                alert('请选择现有玩家或输入新玩家头衔');
                return;
            }
            
            if (playerSelect && newPlayerTitle) {
                alert('请只选择一个选项：现有玩家或新玩家头衔');
                return;
            }
            
            // Submit the form
            const formData = new FormData(this);
            
            fetch(this.action, {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Send message to parent window
                    parent.postMessage({type: 'association_complete'}, '*');
                } else {
                    alert(data.message || '关联失败');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('发生错误，请重试');
            });
        });
        
        function cancelAssociation() {
            parent.postMessage({type: 'association_cancelled'}, '*');
        }
    </script>
</body>
</html>
