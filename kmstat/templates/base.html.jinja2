{% from 'bootstrap5/utils.html' import render_icon %}
<!DOCTYPE html>
<html lang="zh">

<head>
    {% block head %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="{{ url_for('static', filename='logo.png') }}">
    <title>{% block title %}{% endblock %} - {{ siteconfig.sitename }}</title>
    {{ bootstrap.load_css() }}
    <style>
        .clickable-row {
            cursor: pointer;
        }

        .clickable-row a {
            text-decoration: none;
            color: inherit;
        }

        .colored-link {
            text-decoration: none;
        }

        footer a {
            color: inherit;
            text-decoration: none;
        }

        footer a:hover {
            color: #0d6efd;
            text-decoration: underline;
        }
    </style>
    {% block styles %}{% endblock %}
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ url_for('dashboard') }}">{{ siteconfig.sitename }}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('search_player') }}">按玩家查询</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('search_char') }}">按角色查询</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('character_claim') }}">无头衔角色认领</a>
                    </li>
                    {% if current_user.is_authenticated %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('upload_monthly_data') }}">月度数据上传</a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('help_page') }}">说明</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    {% if current_user.is_authenticated %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ current_user.username }}
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="{{ url_for('change_password') }}">修改密码</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ url_for('logout') }}">登出</a></li>
                        </ul>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('login') }}">登录</a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <span class="nav-link">最近更新日期：{{ siteconfig.latest }}</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://github.com/aflyhorse/EVE-CorpKMStat" target="_blank">
                            {{ render_icon('github', size="1.23em") }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        {% block content %}{% endblock %}
    </div>

    {{ bootstrap.load_js() }}
    {% block scripts %}{% endblock %}
    <footer class="text-center mt-4 mb-2">
        {{ siteconfig.footer|safe }}
    </footer>
</body>

</html>