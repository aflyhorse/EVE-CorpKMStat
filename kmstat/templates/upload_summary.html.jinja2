{% extends "base.html.jinja2" %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block title %}{{ upload.year }}-{{ "%02d"|format(upload.month) }} 数据详情{% endblock %}

{% block content %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>{{ upload.year }}-{{ "%02d"|format(upload.month) }} 数据详情</h2>
        <a href="{{ url_for('upload_monthly_data') }}" class="btn btn-secondary">返回</a>
    </div>
    
    <!-- Summary cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">{{ summary.pap_records }}</h5>
                    <p class="card-text">PAP记录</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">{{ summary.bounty_records }}</h5>
                    <p class="card-text">赏金记录</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">{{ summary.mining_records }}</h5>
                    <p class="card-text">挖矿记录</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title">{{ "%.1f"|format(upload.tax_rate * 100) }}%</h5>
                    <p class="card-text">税率</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Upload metadata -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">上传信息</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>上传时间:</strong> {{ upload.upload_date.strftime('%Y-%m-%d %H:%M:%S') }}</p>
                    <p><strong>上传者:</strong> {{ upload.uploaded_by.username }}</p>
                </div>
                <div class="col-md-6">
                    <p><strong>税率:</strong> {{ "%.1f"|format(upload.tax_rate * 100) }}%</p>
                    <p><strong>矿石转换率:</strong> {{ "%.2f"|format(upload.ore_convert_rate) }}</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Data tabs -->
    <ul class="nav nav-tabs" id="dataTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pap-tab" data-bs-toggle="tab" data-bs-target="#pap" 
                    type="button" role="tab">PAP数据</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="bounty-tab" data-bs-toggle="tab" data-bs-target="#bounty" 
                    type="button" role="tab">赏金数据</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="mining-tab" data-bs-toggle="tab" data-bs-target="#mining" 
                    type="button" role="tab">挖矿数据</button>
        </li>
    </ul>
    
    <div class="tab-content" id="dataTabContent">
        <!-- PAP Data -->
        <div class="tab-pane fade show active" id="pap" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>角色名</th>
                                    <th>玩家头衔</th>
                                    <th>PAP</th>
                                    <th>战略PAP</th>
                                    <th>关联状态</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for record in upload.pap_records %}
                                <tr>
                                    <td>{{ record.character_name }}</td>
                                    <td>{{ record.player_title }}</td>
                                    <td>{{ record.pap_points }}</td>
                                    <td>{{ record.strategic_pap_points }}</td>
                                    <td>
                                        {% if record.character %}
                                        <span class="badge bg-success">已关联</span>
                                        {% else %}
                                        <span class="badge bg-warning">未关联</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Bounty Data -->
        <div class="tab-pane fade" id="bounty" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>角色名</th>
                                    <th>纳税(ISK)</th>
                                    <th>关联状态</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for record in upload.bounty_records %}
                                <tr>
                                    <td>{{ record.character_name }}</td>
                                    <td>{{ "{:,.0f}".format(record.tax_isk) }}</td>
                                    <td>
                                        {% if record.character %}
                                        <span class="badge bg-success">已关联</span>
                                        {% else %}
                                        <span class="badge bg-warning">未关联</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Mining Data -->
        <div class="tab-pane fade" id="mining" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>角色名</th>
                                    <th>主人物</th>
                                    <th>体积(m³)</th>
                                    <th>关联状态</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for record in upload.mining_records %}
                                <tr>
                                    <td>{{ record.character_name }}</td>
                                    <td>{{ record.main_character_name }}</td>
                                    <td>{{ "{:,.1f}".format(record.volume_m3) }}</td>
                                    <td>
                                        {% if record.character %}
                                        <span class="badge bg-success">已关联</span>
                                        {% else %}
                                        <span class="badge bg-warning">未关联</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
